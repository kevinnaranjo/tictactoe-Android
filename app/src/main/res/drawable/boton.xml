<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/buttonPressed">
            </solid>
            <corners android:radius="@dimen/boton_radio">
            </corners>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/buttonDisabled">
            </solid>
            <corners android:radius="@dimen/boton_radio">
            </corners>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="@color/gradientButtonStart"
                android:endColor="@color/gradientButtonEnd"
                android:angle="270">
            </gradient>
            <corners android:radius="@dimen/boton_radio">
            </corners>
        </shape>
    </item>
</selector>